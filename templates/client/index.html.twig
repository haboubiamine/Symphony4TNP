{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
   <div class=" container-fluid mt-5 font-weight-normal"  >
  <div class="row justify-content-center">
    <div class="col-sm-10">
    <div class="row justify-content-center mt-3">
        <div class ="col-sm-12">
        <h1 class="text-center">Client</h1>
        <button id="back-to-top-btn"><i class="fas fa-angle-double-up"></i></button>
        <select  class ="custom-select-sm " id="maxRows">
                         <option value="5" selected>5</option>
                         <option value="10">10</option>
                         <option value="20">20</option>
                         <option value="1000">All</option>
        </select>
        </div>
        
    <table id="Table" class="table  table-striped border-info shadow-lg mt-3">
        <thead class="thead-dark">
        
            <tr class="text-center">
                <th width=20><i class="fa fa-hashtag " aria-hidden="true"></i></th>
                <th width=180 >Nom client</th>
                <th width=180>Prenom Client</th>
                <th width=300><i class="fa fa-address-book" aria-hidden="true"></i>Adresse</th>
                <th><i class="fa fa-envelope" aria-hidden="true"></i>E-mail</th>
                <th width=150 colspan=3>Actions <a class="float-right " href="{{ path('client_new') }}"><i class="fa fa-plus-square fa-1x"></i></a></th>
                
            </tr>
        </thead>
        <tbody id="myTable">
        {% for client in clients %}
            <tr class="text-center table-info anim">
                <td class="align-middle">{{ client.id }}</td>
                <td class="align-middle">{{ client.nomcl }}</td>
                <td class="align-middle">{{ client.prenomcl }}</td>
                <td class="align-middle">{{ client.adresse }}</td>
                <td class="align-middle">{{ client.mail }}</td>
                <td width=50 class="align-middle">
                    <a class="btn btn-Dark icon" href="{{ path('client_show', {'id': client.id}) }}"><i class="fa fa-eye fa-1x "></i></a>
                </td>
                <td width=50 class="align-middle">
                    <a class="btn btn-Dark icon"  href="{{ path('client_edit', {'id': client.id}) }}"><i class="fa fa-edit fa-1x"></i></a>
                </td>
                <td width=50 class="align-middle">
                {{ include('client/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="text-center">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    </div>
    </div>
     </div>


     
     

   
{% endblock %}
